{
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky install",
    "commit": "echo 'This command has been replaced with \"npm run changeset\"'",
    "changeset": "changeset add",
    "postinstall": "npm run build",
    "build": "npm run build --workspaces",
    "test": "jest --changedSince `test -f '.changeset/pre.json' && echo 'next' || echo 'master'`",
    "test:all": "jest --colors",
    "lint:cmd": "eslint -c ./.eslintrc.js --ignore-path ./.gitignore",
    "lint": "eslint --cache --cache-location=node_modules/.cache/ './**/*.{js,jsx,ts,tsx,mjs}'",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "stylelint --cache --cache-location=node_modules/.cache/ './**/*.{css,less}'",
    "precommit": "lint-staged",
    "release": "npm run release:prepare && npm run release:push",
    "release:prepare": "changeset version",
    "release:push": "git add . && git commit -m 'release: publish' && changeset tag && git push --follow-tags",
    "release:graduate": "changeset pre exit && npm run release",
    "release:next:init": "changeset pre enter rc",
    "release:publish": "changeset publish --no-git-tag"
  },
  "workspaces": [
    "./packages/*"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mjs}": "eslint",
    "**/*.{css,less}": "stylelint"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.0",
    "@babel/preset-react": "^7.18.6",
    "@cfaester/enzyme-adapter-react-18": "^0.6.0",
    "@changesets/cli": "^2.25.2",
    "@ima/plugin-cli": "^18.1.0",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "enzyme": "3.11.0",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "jest": "^29.3.0",
    "jest-environment-jsdom": "^29.3.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^2.2.1",
    "lint-staged": "^13.0.4",
    "postcss": "^8.4.18",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shallow-with-context": "^0.5.1",
    "stylelint": "^14.14.1",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-order": "^5.0.0",
    "to-mock": "^1.6.2",
    "typescript": "^4.9.3"
  }
}
