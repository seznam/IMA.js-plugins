{
  "version": "1.0.0",
  "scripts": {
    "changeset": "changeset add",
    "postinstall": "npm run build",
    "build": "npm run build --workspaces",
    "test:ci": "jest --coverage --colors --no-watchman --config=jest.config.js",
    "test": "jest --onlyChanged --no-watchman --config=jest.config.js",
    "lint:cmd": "eslint -c ./.eslintrc.js --ignore-path ./.gitignore",
    "lint": "eslint --cache --cache-location=node_modules/.cache/ './**/*.{js,jsx,ts,tsx,mjs}'",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "release": "npm run release:prepare && npm run release:push",
    "release:prepare": "changeset version",
    "release:push": "git add . && git commit -m 'release: publish' && changeset tag && git push --follow-tags",
    "release:graduate": "changeset pre exit && npm run release",
    "release:next:init": "changeset pre enter rc",
    "release:publish": "changeset publish --no-git-tag"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/eslint-parser": "^7.18.0",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "2.24.2",
    "@ima/cli": "18.0.0-rc.4",
    "@ima/core": "18.0.0-rc.4",
    "@ima/dev-utils": "file:ima-dev-utils-18.0.0-rc.4.tgz",
    "@ima/plugin-cli": "file:ima-plugin-cli-18.0.0-rc.1.tgz",
    "@ima/server": "18.0.0-rc.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "babel-preset-jest": "^26.2.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-jest": "^26.8.0",
    "eslint-plugin-jsdoc": "^39.3.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.30.1",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "to-mock": "^1.6.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mjs}": "eslint"
  }
}
